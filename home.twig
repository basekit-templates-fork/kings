{% extends "layout.twig" %}

{% block content %}

<section class="page  home-page">

    {{widget('feature', 'homepagefeature', {
      'headline': 'profile',
      'strapline': 'profile',
      'defaultBgImg': asset('images/feature-image.jpg'),
      'positionTopPercentage': '0',
      'showBtn': true,
      'buttonText': 'Lorem ipsum al'
    })|raw}}


    <!-- Feature Arrow -->
    <div class="feature-arrow">
        <a href="#main-scroll" class="feature-arrow-link  arrow-bounce"></a>
    </div>


    {% include "includes/header.twig" %}


	<!-- Zone Content -->
	<div id="main-scroll" class="zone-content">
		<div class="container">

            {{zone('main')|raw}}

		</div>
	</div>

</section>

{% endblock %}


{% block bodyscripts %}

<!-- Smooth Scroll -->
<script>
    $(document).ready(function(){

        $('a[href*=#]').bind('click', function(e) {
            e.preventDefault();

            var target = $(this).attr("href");

            $('html, body').stop().animate({ scrollTop: $(target).offset().top}, 1000, function() {
                location.hash = target;
            });

            return false;
        });

    });

</script>

{% endblock %}
